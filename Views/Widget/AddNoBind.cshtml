
@{
    ViewData["Title"] = "AddNoBind";
}

@if (ViewData["isAddedNoBind"] == null)
{
    <h1>AddNoBind</h1>

    <form method="post">
        <div class="form-group">
            <label for="objName">Product Name</label>
            <input type="text" name="product-name" class="form-control" id="objName">
            <small id="productNameHelp" class="form-text text-muted">Please enter the name of the product.</small>
        </div>
        <div class="form-group">
            <label for="objDesc">Product Description</label>
            <input type="text" name="product-description" class="form-control" id="objDesc">
            <small id="objdeschelp" class="form-text text-muted">Please enter a brief description of the product.</small>
        </div>
        <div class="form-group">
            <label for="objWeight">Product Weight</label>
            <input type="text" name="unit-weight" class="form-control" id="objWeight">
            <small id="objweighthelp" class="form-text text-muted">Please enter the full weight of the product.</small>
        </div>
        <div class="form-group">
            <label for="objUnitCost">Unit Purchase Cost</label>
            <input type="text" name="unit-cost" class="form-control" id="objUnitCost">
            <small id="unitcosthelp" class="form-text text-muted">Please enter the actual unit purchase cost.</small>
        </div>
        <div class="form-group">
            <label for="objSalePrice">Customer Sale Price</label>
            <input type="text" name="unit-price" class="form-control" id="objSalePrice">
            <small id="unitpricehelp" class="form-text text-muted">Please enter the unit customer sale price.</small>
        </div>
        <button type="submit" class="btn btn-primary">Add Product</button>
    </form>
}

else
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <strong>@ViewData["isAddedNoBind"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
